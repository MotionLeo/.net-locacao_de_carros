@model LocacaoDeCarros.Models.Carro

@{
    ViewData["Title"] = "Novo Carro";
}

<h1>Novo Carro</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdMarca" class="control-label">Marca</label><br>
                <select asp-for= "IdMarca" asp-items="ViewBag.IdMarca"></select>
                    <!-- Utilizando a viewbag, aqui recebe os dados dela e põe num foreach
                    @foreach (var marca in ViewBag.marcas)
                    {
                        <option value="@marca.Id">@marca.Nome</option>
                    } -->
            </div>
            <div class="form-group">
                <label asp-for="IdModelo" class="control-label">Modelo</label><br>
                <select asp-for="IdModelo" asp-items="ViewBag.IdModelo"></select>
                    <!-- Utilizando a viewbag, aqui recebe os dados dela e põe num foreach
                    @foreach (var modelo in ViewBag.modelos)
                    {
                        <option value="@modelo.Id">@modelo.Nome</option>
                    } -->
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

