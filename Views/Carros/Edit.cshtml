@model LocacaoDeCarros.Models.Carro

@{
    ViewData["Title"] = "Alterar Carro";
}

<h1>Alterar @Html.DisplayFor(model => model.Nome)</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="IdMarca" class="control-label">Marca</label><br>
                <select name="IdMarca" id="IdMarca" asp-items="ViewBag.IdMarca" onchange="app.carregaModelosJsVanilla(this)">
                    <!-- Utilizando a viewbag, aqui recebe os dados dela e põe num foreach
                    @foreach (var marca in ViewBag.marcas)
                    {
                        <option value="@marca.Id">@marca.Nome</option>
                    } -->
                </select>
            </div>
            <div class="form-group">
                <label asp-for="IdModelo" class="control-label">Modelo</label><br>
                <select name="IdModelo" id="IdModelo" asp-items="ViewBag.IdModelo">
                    <!-- Utilizando a viewbag, aqui recebe os dados dela e põe num foreach
                    @foreach (var modelo in ViewBag.modelos)
                    {
                        <option value="@modelo.Id">@modelo.Nome</option>
                    } -->
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Alterar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

